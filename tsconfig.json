{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ESNext",
    "paths": {
      "*": ["src/types/*"]
    },
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "./"
  },
  "include": [
    "./src/*"
  ],
  "exclude": ["node_modules", "src/__tests__"]
}
